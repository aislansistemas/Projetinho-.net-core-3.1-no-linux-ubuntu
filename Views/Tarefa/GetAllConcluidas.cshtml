@model testelinux.ViewModels.TarefaConcluidaViewModel;

<div class="container">

    <h1 class="text-center">Tarefas concluidas</h1>

    <a class="btn btn-secondary" asp-action="Cadastrar">Novo</a>

    <div class="tabela-listagem">
        <table class="table table-striped table-dark">
            <thead class="bg-dark">
                <tr>
                    <td>Id</td>
                    <td>Tarefa</td>
                    <td>Data</td>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.ListaTarefas)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NomeTarefa</td>
                <td>@item.DataConcluida</td>
            </tr>
        }
            </tbody>
        </table>
        <h5>Total tarefas = <span class="text-secondary">@Model.ToTalTarefasConcluidas</span></h5>
    </div>

</div>